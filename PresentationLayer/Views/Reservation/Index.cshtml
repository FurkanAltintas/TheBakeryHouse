@model EntityLayer.Concrete.Reservation

@{
    ViewBag.Title = "Book A Table";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@Html.Partial("PartialBanner")

<section class="book_table_area section_gap">
    <div class="container">
        <div class="book_table_inner row">
            <div class="col-lg-5">
                <div class="table_img">
                    <img src="~/Content/food-bar-gh-pages/img/book-table.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-7">
                <div class="table_form">
                    <h3>Book a Table</h3>
                    <p>Who are in extremely love with eco friendly system lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    @using (Html.BeginForm("Add", "Reservation", FormMethod.Post, new { @class = "book_table_form row" }))
                    {
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Enter your name" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Enter email address" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Phone Number" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextAreaFor(x => x.Message, 5,0, new { @class = "form-control", @placeholder = "Message" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @type = "datetime-local" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @type = "datetime-local" })
                        </div>
                        <div class="form-select">
                            @Html.DropDownListFor(x => x.EventId, (IEnumerable<SelectListItem>)ViewBag.Event, "Select Event")
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" value="submit" class="btn submit_btn form-control">Make Reservation</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@if (ViewBag.Reservation != null)
{
    <script>
        var strValue = "@((string)ViewBag.Reservation)";
    if (strValue != null && strValue != '') {
        swal({
            title: "Reservation!",
            text: "Reservation taken successfully!",
            icon: "success",
            button: "Ok!",
        });
    }
    </script>
}