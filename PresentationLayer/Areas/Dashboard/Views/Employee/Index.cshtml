@model List<EntityLayer.Concrete.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";

    int i = 0;
}

<table class="table">
    <thead class="thead-danger shadow-pinterest">
        <tr>
            <th>#</th>
            <th>Authority</th>
            <th>FullName</th>
            <th>UserName</th>
            <th>Degree</th>
            <th>Profile</th>
            <th>Email</th>
            <th>Phone</th>
            <th>WebSite</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.AuthorityId</td>
                <td>@item.FullName</td>
                <td>@item.UserName</td>
                <td>@item.About</td>
                <td><img src="@item.Profile" alt="@item.FullName" title="@item.UserName" style="width: 50px; height: auto" /></td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td><a href="@item.WebSite">Web Site</a></td>
                <td>
                    <a href="@Url.Action("Delete","Employee",new { id = item.Id })" data-toggle="tooltip" data-original-title="Delete">
                        <i class="fa fa-close text-muted m-r-5"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create","Employee")" class="btn btn-danger shadow-pinterest waves-effect waves-light m-1">Employee Add</a>