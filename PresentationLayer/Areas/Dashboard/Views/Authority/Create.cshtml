@model EntityLayer.Concrete.Authority

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";
}

@using (Html.BeginForm("Edit", "Authority", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger shadow-pinterest waves-effect waves-light m-1">Create Authority</button>
    </div>
}