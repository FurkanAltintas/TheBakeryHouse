@model List<EntityLayer.Concrete.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";

    int i = 0;
}

<table class="table table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>SubTitle</th>
            <th>Image</th>
            <th>Price</th>
            <th>Rated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td><img src="@item.Image" alt="@item.Title" title="@item.Title" style="height: 50px; width: 50px;" /></td>
                <td>@item.Price</td>
                <td><a href="@Url.Action("Rated","Menu",new { id = item.Id })" class="badge badge-@(item.IsTopRated == true ? "success":"danger") px-2">@(item.IsTopRated == true ? "Active":"Passive")</a></td>
                <td>
                    <a href="@Url.Action("Edit","Menus",new { id = item.Id })" data-toggle="tooltip" data-original-title="Edit">
                        <i class="fa fa-pencil color-muted m-r-5"></i>
                    </a>

                    <a href="@Url.Action("Delete","Menus", new { id = item.Id })" data-toggle="tooltip" data-original-title="Delete">
                        <i class="fa fa-close color-muted m-r-5"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create","Menus")" class="btn mb-1 btn-flat btn-outline-success">Add</a>