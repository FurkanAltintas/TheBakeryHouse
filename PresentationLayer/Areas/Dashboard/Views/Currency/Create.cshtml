@model EntityLayer.Concrete.Currency

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";
}

@using (Html.BeginForm("Edit","Currency",FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBoxFor(x=>x.Name, new { @class = "form-control", @placeholder = "Name" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(x=>x.Symbol, new { @class = "form-control", @placeholder = "Symbol" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger shadow-danger waves-effect waves-light m-1">Create Currency</button>
    </div>
}

