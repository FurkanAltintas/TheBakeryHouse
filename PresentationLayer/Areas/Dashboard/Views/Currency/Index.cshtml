@model List<EntityLayer.Concrete.Currency>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutDashboard.cshtml";

    int i = 0;
}


@if (Model.Count() != 0)
{
    <div class="alert alert-light-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <div class="alert-icon">
            <i class="icon-close"></i>
        </div>
        <div class="alert-message">
            <span><strong>Success!</strong>  There are @Model.Count() content</span>
        </div>
    </div>

    <table class="table table">
        <thead class="thead-danger shadow-pinterest">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Symbol</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@item.Symbol</td>
                    <td>
                        <a href="@Url.Action("Edit","Currency",new { id = item.Id })" data-toggle="tooltip" data-original-title="Edit">
                            <i class="fa fa-pencil color-muted m-r-5"></i>
                        </a>

                        <a href="@Url.Action("Delete","Currency", new { id = item.Id })" data-toggle="tooltip" data-original-title="Delete">
                            <i class="fa fa-close color-muted m-r-5"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <div class="alert-icon">
            <i class="icon-close"></i>
        </div>
        <div class="alert-message">
            <span><strong>Danger!</strong>  There is no content</span>
        </div>
    </div>
}

<a href="@Url.Action("Create","Currency")" class="btn btn-danger shadow-danger waves-effect waves-light m-1">Currency Create</a>